.intro
	margin 5rem auto
	padding 0 1rem
	position relative
	
	&__hed
		max-width 55rem
		margin 0 auto 1rem auto
		padding 0
		text-align center
		font-weight bold
		font-size 2.5rem
		line-height 1.2
		+mq('bp-2')
			font-size 3.5rem
		+mq('bp-3')
			font-size 5rem
	
	&__byline
		set-type-size('small', true)
		text-align center
		// margin-bottom 1rem
		padding 0
	&__dek
		max-width $column-width
		margin 5rem auto
		padding 0
		color $primary
		set-type-size('large', true)
		
	&__prose
		max-width 40rem
		margin 1.5rem auto
	
	&__video
		max-width 40rem
		margin 5rem auto
		video
			border-radius 3px
		
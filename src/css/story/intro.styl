.intro
	margin 0 auto 5rem auto
	padding 1rem
	position relative
	width 100%
	overflow hidden
	text-shadow 0 0 3px rgba(0,0,0,0.5)
	
	&__hed
		position relative
		max-width 55rem
		margin 0 auto 1rem auto
		padding 6rem 0 2rem 0
		+mq('bp-2')
			padding 8rem 0 4rem 0
		text-align center
		font-weight bold
		font-size 2.5rem
		line-height 1.1
		+mq('bp-2')
			font-size 3.5rem
		+mq('bp-3')
			font-size 4rem
		+mq('bp-4')
			font-size 5rem
	
	&__byline
		position relative
		set-type-size('small', true)
		text-align center
		// margin-bottom 1rem
		padding 0
	&__dek
		position relative
		max-width 35rem
		margin 2.5rem auto
		padding 0
		color $primary
		set-type-size('medium', true)
		+mq('bp-2')
			set-type-size('large', true)
		
	&__prose
		position relative
		max-width 40rem
		margin 1.5rem auto
	
	&__video
		max-width 40rem
		margin 5rem auto
		video
			border-radius 3px
	
	&__bg video
		display none
		+mq('bp-desktop')
			display block
		position absolute
		top 50%
		left 50%
		min-width 100%
		min-height 100%
		width auto
		height auto
		z-index set-index('bottom')
		transform translateX(-50%) translateY(-50%)
	
	&__bg .image
		display block
		+mq('bp-desktop')
			display none
		background url('assets/willy.jpg') no-repeat
		background-size cover	
		background-position center center
		position absolute
		top 0
		left 0
		width 100%
		height 100%
			
	&__overlay
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background url('assets/bg-pattern-dark.png')
		opacity 0.25
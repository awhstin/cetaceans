.section--death
	padding 0 1rem
	position relative
	min-height 1000px
	width 100%
	
	.prose
		margin 0 auto
		max-width 40rem
		position relative

	//+mq('bp-desktop')
		//margin 0
		
		.prose--title
			max-width 40rem
			margin 0 auto
			position relative
			text-align center
	
.prose__paragraphs
	padding 1rem
	position relative
	
	p 
		
		padding 1rem
		background rgba(255,255,255, 0.9)
	
.death__graphic
	width 100%
	background rgba(255,0,0,0.1)
	/*position absolute*/
	top 0
	right 0
	transform translate3d(0, 0, 0)
	display flex
	align-items center
	
	.graphic__container
		width 100%
		max-width 60rem
		margin 0 auto
		

	.axis
		path
			stroke $off-white
		text
			fill $off-white
		line 
			stroke $off-white
			
.slider
	
	.ticks
		text
			fill $off-white
			
	



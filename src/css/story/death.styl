.section--death
	padding 0 1rem
	
.death__graphic
	width 100%
	
	.graphic__container
		width 100%
		max-width 60rem
		margin 0 auto
		margin-bottom 4rem
		
	.axis
		path
			stroke $c1-inverted
		text
			fill $c1-inverted
			font-size 12px
		line 
			stroke $c1-inverted
	
	.axis--x 
		.tick
			line 
				display none
		
	.axis--y 
		path
			display none
		line
			stroke-dasharray 4px 4px
			opacity 0.25
		.tick:nth-child(3)
			display none
		
		.label 
			font-weight bold
			font-size 12px
			text-transform uppercase
			letter-spacing 0.05em

.slider__group			
	display flex
	flex-direction column
	justify-content center
	max-width 30rem
	margin 2rem auto
	.slider 
		display flex
		justify-content center
		flex-wrap wrap
		margin-bottom 0.5rem
	p 
		margin 0
		width 100%
		text-align center
		set-type-size('small')
		+mq('bp-desktop')
			width 50%
			text-align left
		&.output
			width 100%
	span 
		font-weight bold
		color $c5
	input
		display block
		width 100%
		+mq('bp-desktop')
			display inline-block
			width 50%
				
.deathLine 
	fill none
	stroke $c5
	stroke-width 2px
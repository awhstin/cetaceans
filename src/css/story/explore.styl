.section--explore
	background rgba(255,0,0,0.1)
	position relative
	min-height 1000px
	width 100%
	transition fill $video-transition
	.square
		&--Capture
				fill $captureColor
				
	.square
		&--Born
				fill $bornColor

		&--Rescue
				fill $rescueColor	
				
		&--Alive
				fill $primary
				
		&--Died
				fill $secondary
				
		&--Escaped
				fill $gray
				
		&--Released
				fill $off-white

		&--Unknown
				fill $tertiary
				
		&--SeaWorld
				fill darken($aliveColor, 20)
		
		&--USNavy
				fill lighten($aliveColor, 20)
				
		&--Other
				fill $aliveColor
		


	.prose
		margin 0 auto
		max-width 40rem
		position relative
		

	/*	+mq('bp-desktop')
			margin 0*/
		
	.prose--title
		margin 0 auto
		max-width 40rem
		position relative
		text-align center

		/*+mq('bp-desktop')
			margin 0*/

.explore__graphic
	width 100%
/*	background rgba(255,0,0,0.1)*/
	top 0
	right 0
	transform translate3d(0, 0, 0)
	display flex
	align-items center
	
	.graphic__container
		width 100%
		max-width 60rem
		margin 0 auto

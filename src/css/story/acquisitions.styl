$chart-margin = 40px

.section--scroll
	position relative
	min-height 480px
	width 100%
	.layer
		&--capture
			.bar
				fill $primary
		&--born
			.bar
				fill $secondary
				
		&--rescue
			.bar
				fill $tertiary

// .scroll
// 	&.is-touchable
// 		cursor pointer
				
.scroll__graphic
	width 100%
	// background rgba(255,0,0,0.1)
	position absolute
	top 0
	right 0
	transform translate3d(0, 0, 0)
	display flex
	align-items center
	transition opacity $video-transition
	&.is-bottom
		top auto
		bottom 0
	&.is-fixed
		position fixed
			
	&.is-untouchable
		pointer-events none
	
	.graphic__container
		width 100%
		max-width 60rem
		margin 0 auto
		position relative
	
	.container__video
		position absolute
		top 0
		left 0
		width 100%
		height 100%

	.axis
		path
			stroke $off-white
		text
			fill $off-white
		line 
			stroke $off-white

.scroll__prose
	max-width 30rem
	margin 0 auto
	position relative
	// &.is-fixed
	// 	+mq('bp-desktop')
	// 		.scroll__video
	// 			position fixed
		
.prose__step
	padding 1rem
	position relative
	p 
		margin 0
		padding 1rem
		background-color $dark
		border-radius 3px
		box-shadow 0 0 12px 3px $blue-dark
	

.section--scroll
	position relative
	min-height 480px
	width 100%
	.layer
		&--capture
			.bar
				fill $primary
		&--born
			.bar
				fill $secondary
				
		&--rescue
			.bar
				fill $tertiary

.scroll
	&.is-touchable
		cursor pointer
				
.scroll__graphic
	width 100%
	// background rgba(255,0,0,0.1)
	position absolute
	top 0
	right 0
	transform translate3d(0, 0, 0)
	display flex
	align-items center
	transition opacity $video-transition
	&.is-bottom
		top auto
		bottom 0
	&.is-fixed
		position fixed
			
	&.is-untouchable
		pointer-events none
		opacity 0.25
	
	.graphic__container
		width 100%
		max-width 60rem
		margin 0 auto

	.axis
		path
			stroke $off-white
		text
			fill $off-white
		line 
			stroke $off-white

.scroll__prose
	max-width 30rem
	margin 0 auto
	position relative
	&.is-fixed
		+mq('bp-desktop')
			.scroll__video
				position fixed
		
.prose__step
	padding 1rem
	position relative
	p 
		margin 0
		padding 1rem
		background-color $dark
		border-radius 3px
		box-shadow 0 0 12px 3px $blue-dark
	
		// &.quote
		// 	background none
		// 	font-size 1.2em
		// 	color yellow
		// 	text-shadow 0 0 2px black

.scroll__video
	width 100%
	overflow hidden
	opacity 0
	transition opacity $video-transition
	+mq('bp-desktop')
		position absolute
		top 0
		left 0
		height 100vh
		z-index set-index('bottom')
		
	&.is-visible
		opacity 0.75
		cursor pointer
		pointer-events auto
	
	video 
		position absolute
		top 0
		top 50%
		left 50%
		min-width 100%
		min-height 100%
		width auto
		height auto
		z-index 0
		transform translate(-50%,-50%)
		background-size cover

	.video__overlay
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background url('assets/bg-pattern-dark.png')
		opacity 0.25

.btn__audio
	background-color transparent
	background-color $primary
	color darken($primary, 40)
	padding 0.25em
	border-radius 2px
	font-size 0.75em
	text-transform uppercase
	letter-spacing 0.025em
	font-weight bold
	display inline-block
	margin-left 0.5em
	svg
		fill darken($primary, 40)
		width 1em
		height 1em
		vertical-align middle
		margin-top -4px
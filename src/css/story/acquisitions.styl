.scroll__video 
	position absolute
	opacity 0
	top $chart-margin
	transition 300ms opacity ease-in-out
	border-radius 3px
	&.is-visible
		opacity 1
		cursor pointer
		pointer-events auto
	
.btn__audio
	background-color transparent
	background-color $primary
	color darken($primary, 40)
	padding 0.25em
	border-radius 2px
	font-size 0.75em
	text-transform uppercase
	letter-spacing 0.025em
	font-weight bold
	display inline-block
	margin-left 0.5em
	svg
		fill darken($primary, 40)
		width 1em
		height 1em
		vertical-align middle
		margin-top -4px
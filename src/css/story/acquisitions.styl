.section--scroll
	position relative
	min-height 480px
	width 100%
	.layer
		&--capture
			.bar
				fill $captureColor
		&--born
			.bar
				fill $bornColor
				
		&--rescue
			.bar
				fill $rescueColor
				
.scroll__graphic
	width 100%
	// background rgba(255,0,0,0.1)
	position absolute
	top 0
	right 0
	transform translate3d(0, 0, 0)
	display flex
	align-items center
	transition opacity $video-transition
	&.is-bottom
		top auto
		bottom 0
	&.is-fixed
		position fixed
	&.is-untouchable
		pointer-events none
		opacity 0.25
	
	.graphic__container
		width 100%
		max-width 60rem
		margin 0 auto

	// svg 
	// 	background rgba(0,0,255,0.2)

.scroll__prose
	max-width 30rem
	margin 0 auto
	position relative
	// pointer-events none
	&.is-untouchable
		pointer-events none
		
.prose__step
	padding 1rem
	position relative
	p 
		margin 0
		padding 1rem
		background rgba(255,255,255, 0.9)
	
		// &.quote
		// 	background none
		// 	font-size 1.2em
		// 	color yellow
		// 	text-shadow 0 0 2px black
	
.scroll__video
	width 100%
	overflow hidden
	opacity 0
	transition opacity $video-transition
	+mq('bp-desktop')
		position fixed
		top 0
		left 0
		height 100vh
	&.is-visible
		opacity 1
		cursor pointer
	
	video 
		position absolute
		top 0
		top 50%
		left 50%
		min-width 100%
		min-height 100%
		width auto
		height auto
		z-index 0
		transform translate(-50%,-50%)
		background-size cover

	.video__overlay
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background url('assets/bg-pattern-dark.png')
		opacity 0.25
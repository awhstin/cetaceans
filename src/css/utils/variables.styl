$video-transition = 250ms

// -------------------
// Breakpoints
// -------------------
$mq_vars = {
    bp-1: '(min-width: 25em)'
    bp-2: '(min-width: 40em)'
    bp-3: '(min-width: 50em)'
    bp-4: '(min-width: 60em)'
    bp-desktop: '(min-width: 600px)'
}

// -------------------
// Typefaces
// -------------------
$canela = 'Canela Web'
$canela-hash = 'canela'
$publico = 'Publico Text Web'
$publico-hash = 'publico'
$atlas = 'Atlas Grotesk Web'
$atlas-hash = 'atlas'

$sans = $atlas, Helvetica, Arial, sans-serif
$serif = $publico, Georgia, Times, serif
$mono = Consolas, Monaco, 'Courier New', monospace

// z-index
$z-index = {
    bottom: -100
    middle: 0
    top: 100
    overlay: 1000
}

// Color
$off-black = #2a2a2a
$gray-dark = #666
$gray = #999
$gray-light = #ccc
$off-white = #efefef

$captureColor = #25273D
$bornColor = #538FA8
$rescueColor = #999999
$aliveColor = #D24858
$deadColor = #493831
$unknownColor = #999999
$releaseColor = #FDEECD
$escapeColor = #EAB05E

$primary = #71CC7F
$dark = #1B3744
$blue-dark = #1A535C
$secondary = #238F7C
$tertiary = #DAD154
// #71CC7F,#44AE81,#238F7C,#16706F,#1A535C,#1B3744

$column-width = 40rem

$root-size = 17px

$type-size = {
    xx-small: {
        size: 10px,
        line-height: 1.5
    }
    x-small: {
        size: 12px,
        line-height: 1.5    
    }
    small: {
        size: 14px,
        line-height: 1.5
    }
    medium: {
        size: $root-size,
        line-height: 1.7
    }
    large: {
        size: 24px,
        line-height: 1.5
    }
    x-large: {
        size: 32px,
        line-height: 1.2
    }
    xx-large: {
        size: 48px,
        line-height: 1.2
    }
    xxx-large: {
        size: 64px,
        line-height: 1.2
    }
}


